{
  "name": "inviwo",
  "version-string": "0.9.11.1",
  "homepage": "https://github.com/inviwo/inviwo",
  "license": "BSD-2-Clause",
  "vcpkg-configuration": {
    "default-registry": {
      "kind": "builtin",
      "baseline": "f5cbc726b123896eef77f5acc1b9047a28a0731e"
    },
    "overlay-ports": [
      "./tools/vcpkg"
    ]
  },
  "dependencies": [
    "assimp",
    "benchmark",
    "cimg",
    "eigen3",
    "fmt",
    "freetype",
    "glew",
    "glfw3",
    "glm",
    "gtest",
    "libjpeg-turbo",
    "libpng",
    "minizip",
    "nlohmann-json",
    "nifticlib",
    "openexr",
    "pybind11",
    "roaring",
    "tclap",
    "tiff",
    "tinydir",
    "tinyxml2",
    "llnl-units",
    "utfcpp",
    "zlib",
    "pegtl",
    "inja",
    "warn",
    "zlib",
    "bxzstr",
    "fast-float",
    "bext-sml",
    "md4c",
    "curlcpp"
  ],
  "default-features": [
    "hdf5",
    "ffmpeg"
  ],
  "features": {
    "hdf5" : {
      "description": "Get HDF from vcpkg, needed for the hdf module",
      "dependencies": [
        {
          "name": "hdf5",
          "features": ["cpp","zlib"]
        }
      ]
    },
    "ffmpeg" : {
      "description": "Get ffmpeg from vcpkg, needed for the ffmpeg module",
      "dependencies": ["ffmpeg"]
    },
    "qt":  {
      "description": "Get Qt from vcpkg",
      "dependencies": [
        { 
          "name": "qtbase",
          "default-features": false,
          "features": [
            "freetype",
            "jpeg",
            "png",
            "thread",
            "gui",
            "widgets",
            "opengl",
            "zstd",
            {
              "name": "xcb",
              "platform": "linux"
            },
            {
              "name": "xcb-xlib",
              "platform": "linux"
            },
            {
             "name": "xrender",
             "platform": "linux"
            }
          ]
        },
        "qtsvg"
      ]
    },
    "python": {
      "description": "Build python from vcpkg",
      "dependencies": [
        "python3"
      ]
    },
    "ttk": { 
      "description": "Support topology-tool-kit modules", 
      "dependencies": ["topology-tool-kit"]
    },
    "vtk": {
      "description": "Support VTK modules", 
      "dependencies": [
        { 
          "name": "vtk",
          "default-features": false,
          "features": [
            "opengl",
            "utf8"
          ]
        }
      ]
    },
    "dicom" : {
      "description": "Grassroots DICOM library",
      "dependencies": ["gdcm"]
    },
    "graphviz": {
      "description": "Enable graph layout using graphviz",
      "dependencies": ["graphviz"]
    },
    "openmesh": {
      "description": "OpenMesh library",
      "dependencies": ["openmesh"]
    },
    "nanovg": {
      "description": "NanoVG library",
      "dependencies": ["nanovg"]
    },
    "sgct-tracy" : {
      "description": "Inviwo Dome dependencies",
      "dependencies": [
        {
            "name": "tracy",
            "features" : ["gui-tools"]
        },
        {
            "name": "sgct",
            "features" : ["tracy", "freetype"]
        }
      ]
    },
    "sgct" : {
      "description": "Inviwo Dome dependencies",
      "dependencies": [
        {
            "name": "sgct",
            "features" : ["freetype"]
        }
      ]
    }
  }
}

set(MACDEPLOYQT "@MACDEPLOYQT@")
set(IVW_APP_INSTALL_NAME "@IVW_APP_INSTALL_NAME@")

set(APP_BUNDLE_PATH "${CPACK_TEMPORARY_INSTALL_DIRECTORY}/${IVW_APP_INSTALL_NAME}.app")
set(COMMAND_ARGS
    ${MACDEPLOYQT}
    ${APP_BUNDLE_PATH}
    -verbose=1
    # Silences warnings on subsequent re-installations
    -always-overwrite
)
execute_process(COMMAND ${COMMAND_ARGS} RESULT_VARIABLE EXIT_CODE)
if(NOT EXIT_CODE EQUAL 0)
    message(FATAL_ERROR
        \"Running ${COMMAND_ARGS} failed with exit code \${EXIT_CODE}.\")
endif()